<ivy-module version="2.0"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
  <info organisation="gov.nih.nci.cabig.ctms" module="ctms-commons-core"/>

  <configurations>
    <include file="../ivy/default-configurations.xml"/>
  </configurations>

  <dependencies>
    <dependency name="ctms-commons-base" rev="latest.integration"/>
    <dependency name="ctms-commons-lang" rev="latest.integration"/>

    <dependency org="org.hibernate" name="com.springsource.org.hibernate" rev="3.3.1.GA"/>
    <dependency org="org.hibernate" name="com.springsource.org.hibernate.annotations" rev="3.4.0.GA"/>
    <dependency org="javax.persistence" name="com.springsource.javax.persistence" rev="1.0.0" />

    <dependency org="org.springframework" name="org.springframework.beans"        rev="${lib.spring.rev}"/>
    <dependency org="org.springframework" name="org.springframework.context"      rev="${lib.spring.rev}"/>
    <dependency org="org.springframework" name="org.springframework.core"         rev="${lib.spring.rev}"/>
    <dependency org="org.springframework" name="org.springframework.orm"          rev="${lib.spring.rev}" conf="*->hibernate"/>
    <dependency org="org.springframework" name="org.springframework.transaction"  rev="${lib.spring.rev}"/>

    <dependency org="org.slf4j" name="jcl-over-slf4j" rev="${lib.slf4j.rev}"/>
    <dependency org="org.apache.commons" name="com.springsource.org.apache.commons.lang" rev="${lib.jakarta-commons.lang.rev}"/>
    <dependency org="net.sourceforge.collections" name="collections-generic" rev="${lib.generic-commons-collections.rev}"/>
    <dependency org="org.apache.ant" name="com.springsource.org.apache.tools.ant" rev="1.7.1" />

    <!-- TEST -->
    <dependency name="ctms-commons-testing-unit" rev="latest.integration" conf="unit-test->runtime"/>
    <dependency org="org.slf4j" name="slf4j-simple" rev="${lib.slf4j.rev}" conf="unit-test->default"/>
    <dependency org="org.hsqldb" name="com.springsource.org.hsqldb" rev="${lib.hsqldb.rev}" conf="unit-test->*"/>
  </dependencies>
</ivy-module>
