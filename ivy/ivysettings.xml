<ivysettings>
  <properties file="dependency-versions.properties"/>
  <properties file="home/build-generated.properties"/>

  <settings defaultResolver="libraries"/>

  <resolvers>
    <filesystem name="this-project" local="true">
      <artifact pattern="${project-repo.base}/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
      <ivy pattern="${project-repo.base}/[organisation]/[module]/[revision]/[artifact].[ext]"/>
    </filesystem>
    <chain name="springsource">
      <url name="springsource-release">
        <ivy pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
        <artifact pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
      </url>
      <url name="springsource-external">
        <ivy pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
        <artifact pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
      </url>
    </chain>
    <chain name="libraries">
      <ibiblio name="m2" m2compatible="true"/>
    </chain>
  </resolvers>

  <modules>
    <module organisation="gov.nih.nci.cabig.ctms" resolver="this-project"/>
    <module organisation="com.springsource.*" resolver="springsource"/>
    <module         name="com.springsource.*" resolver="springsource"/>
    <module organisation="org.springframework.*" resolver="springsource"/>
  </modules>
</ivysettings>
